{
    "compilerOptions": {
        "composite": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2020",
        "sourceMap": true,
        "lib": ["es2020"]
    },
    "exclude": [
        "test",
        "**/*.unit.ts",
        "node_modules",
        "lib"
    ]
}